<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.com.pedrojose.rater.activities.MainMenuAct">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="180dp"
            android:layout_height="238dp"
            android:text="Recolha de Dados"
            android:drawableTop="@drawable/road"
            android:onClick="loggerPreStart"
            android:textSize="30sp"
            android:fontFamily="droid"
            android:textStyle="bold"
            android:id="@+id/button3"
            android:layout_gravity="left|top" />

        <Button
            android:layout_width="170dp"
            android:layout_height="240dp"
            android:drawableTop="@drawable/eval"
            android:text="Avaliação &amp; Mapa"
            android:textSize="26sp"
            android:fontFamily="droid"
            android:textStyle="bold"
            android:id="@+id/button9"
            android:onClick="eval"
            android:layout_gravity="right|top" />

        <Button
            android:layout_width="182dp"
            android:layout_height="241dp"
            android:text="Conta"
            android:drawableTop="@drawable/configuser"
            android:textSize="40sp"
            android:fontFamily="droid"
            android:textStyle="bold"
            android:id="@+id/button11"
            android:onClick="accSettings"
            android:layout_gravity="left|bottom" />

        <Button
            android:layout_width="169dp"
            android:layout_height="240dp"
            android:text="Terminar Sessão"
            android:textSize="28sp"
            android:drawableTop="@drawable/exit"
            android:onClick="logout"
            android:fontFamily="droid"
            android:textStyle="bold"
            android:id="@+id/button13"
            android:layout_gravity="right|bottom" />

    </FrameLayout>
</RelativeLayout>
