<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.com.pedrojose.rater.activities.MainMenuAct">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Terminar Sessão"
            android:drawableLeft="@drawable/exit"
            android:onClick="logout"
            android:fontFamily="droid"
            android:id="@+id/button13"
            android:layout_gravity="right|bottom"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            android:layout_alignBottom="@+id/button9"
            android:layout_alignTop="@+id/button11" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Conta"
            android:drawableLeft="@drawable/configuser"
            android:fontFamily="droid"
            android:textStyle="bold"
            android:id="@+id/button11"
            android:onClick="accSettings"
            android:layout_gravity="left|bottom"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/eval"
            android:text="Avaliação &amp; Mapa"
            android:fontFamily="droid"
            android:id="@+id/button9"
            android:onClick="eval"
            android:layout_gravity="right|center_vertical"
            android:layout_toEndOf="@+id/button3"
            android:layout_above="@+id/button11" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Recolha de Dados"
            android:drawableLeft="@drawable/road"
            android:onClick="loggerPreStart"
            android:fontFamily="droid"
            android:textStyle="bold"
            android:id="@+id/button3"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/button11" />



    </FrameLayout>

</RelativeLayout>
